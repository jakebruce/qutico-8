function start_game()
	generate_map()
	make_player()
	ents={player}
	music(0)
end

function _init()
	set_nokia_vars()
	start_game()
end

function set_nokia_vars()
	_nk_w=84
	_nk_h=48
	_nk_x1=(128-_nk_w)/2
	_nk_y1=(128-_nk_h)/2
	_nk_x2=128-_nk_x1
	_nk_y2=128-_nk_y1
end
