--map

valid_tiles={33,33,33,34}

function generate_map()
	clear_map()
	for x=0,flr(_nk_w/8)-1 do
		for y=0,flr(_nk_h/8)-1 do
			set_tile(x,y,rnd(valid_tiles))
		end
	end
end

function set_tile(x,y,t)
	i=y*128+x
	addr=0x2000+i
	poke(addr,t)
end

function clear_map()
	memset(0x2000,0,0x1000)
end
