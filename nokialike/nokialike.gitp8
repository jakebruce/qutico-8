--entities

function make_player()
	repeat	
		mx=flr(rnd(10))
		my=flr(rnd(6))
	until not fget(mget(mx,my),0)
	
	player={
		x=mx,
		y=my,
		sprites={1,2,3,4},
		bump=nil,
		update=update_player,
		draw=draw_player,
	}
end
