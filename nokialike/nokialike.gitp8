--updates

function _update60()
	for e in all(ents) do e:update() end	
end

function update_player(s)
	if s.bump then
		update_bump(s)
		return
	end
	
	mv={0,0,false}
	if (btnp(⬅️)) mv={-1, 0,true}
	if (btnp(➡️)) mv={ 1, 0,true}
	if (btnp(⬆️)) mv={ 0,-1,true}
	if (btnp(⬇️)) mv={ 0, 1,true}
	if can_move(s,mv[1],mv[2]) then
		s.x+=mv[1]
		s.y+=mv[2]
		if (mv[3])	sfx(63,0)
	else
		bump(s,mv)
	end
end

function update_bump(s)
	s.bump.t+=s.bump.s
	if (s.bump.t>1) s.bump=nil
end

function bump(s,mv)
	sfx(62,0)
	s.bump={
		dx=mv[1]*3,
		dy=mv[2]*3,
		t=0,
		s=0.15,
	}
end

function passable(mx,my)
	return not fget(mget(mx,my),0)
end

function can_move(s,dx,dy)
	nx=s.x+dx
	ny=s.y+dy
	return (
		    passable(nx,ny)
		and nx>-1 and nx<10
		and ny>-1 and ny<6
	)
end
