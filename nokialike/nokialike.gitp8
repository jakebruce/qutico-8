--draws

function draw_game()
	map()
	draw_outer_walls()
	for e in all(ents) do e:draw() end
end

function draw_outer_walls()
	for x=-1,10 do
		spr(34,x*8,-8)
		spr(34,x*8,_nk_h)
	end
	for y=-1,7 do
		spr(34,-8,y*8)
		spr(34,_nk_w-4,y*8)
	end
end

function draw_player(s)
	sprite=s.sprites[flr(time()*2)%#s.sprites+1]
	dx=0
	dy=0
	if s.bump then
		dx=s.bump.dx*cos(s.bump.t/2-0.25)
		dy=s.bump.dy*cos(s.bump.t/2-0.25)
	end
	spr(sprite,s.x*8+dx,s.y*8+dy)
end

function _draw()
	cls()
	setup_nokia_screen()
	draw_game()
	draw_nokia_hud()
end

function setup_nokia_screen()
	camera(-_nk_x1-2,-_nk_y1)
	clip(_nk_x1,_nk_y1,_nk_w,_nk_h)
end

function draw_nokia_hud()
	camera()
	clip()
	rectfill(0,0,127,_nk_y1-1,1)
	rectfill(0,0,_nk_x1-1,127,1)
	rectfill(0,_nk_y2,127,127,1)
	rectfill(_nk_x2,0,127,127,1)
	rect(_nk_x1-1,_nk_y1-1,_nk_x2,_nk_y2,5)
	rect(_nk_x1-2,_nk_y1-2,_nk_x2+1,_nk_y2+1,7)
	rect(_nk_x1-3,_nk_y1-3,_nk_x2+2,_nk_y2+2,6)
end

