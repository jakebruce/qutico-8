version 29
__lua__
function _init()
	x=22
	y=80
	t=1
end

function no_buttons()
	return not (btn(⬅️) or btn(➡️) or btn(⬆️) or btn(⬇️))
end

function _update60()
	if (btn(⬅️)) x-=1
	if (btn(➡️)) x+=1
	if (btn(⬆️)) y-=1
	if (btn(⬇️)) y+=1
	if (btnp(❎)) interact()
	if no_buttons() then
		t=1
	else
		t+=1
	end
end

function _draw()
	cls()
	map()
	camera(x-63,y-63)
	n=6+(flr(t/8)%4)*2
	spr(n,x,y,2,2)
end
