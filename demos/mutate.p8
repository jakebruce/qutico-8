pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _update60() end

x,y=0,0
function _draw()
	cls()
	if (btn(⬅️)) x-=1
	if (btn(➡️)) x+=1
	if (btn(⬆️)) y-=1
	if (btn(⬇️)) y+=1
	sspr(8,0,8,8,0,0,127,127)
	for _x=0,7 do
	for _y=0,7 do
		i=_x+_y*128
		if rnd()<0.001 then
			b=0x0000+4
			m=b+flr(i/2)
			h=peek(m)&0xf0
			l=peek(m)&0x0f
			d=rnd({-1,0,1})
			if i%2==0 then
				l=(l+d)%0x10
			else
			 h=(h+d*0x10)%0x100
			end
			poke(m,l+h)
		end
	end
	end
end
